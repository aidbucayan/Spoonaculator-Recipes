<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_recipe_holder"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/row_recipe_image"
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:visibility="visible" />

            <TextView
                android:id="@+id/row_recipe_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="170dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:maxLines="2"
                android:text="Lorem ipsum dolor si"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/rl_holder1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_recipe_image"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner_green_trans_inside"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/row_recipe_likes"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_below="@+id/row_recipe_image"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_toStartOf="@id/row_recipe_no_likes"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_thumb_up_black_24dp"
                            android:visibility="visible"
                            app:tint="@color/green" />

                        <TextView
                            android:id="@+id/row_recipe_no_likes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:text="9 Likes"
                            android:textColor="@color/green"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner_green_trans_inside"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/row_recipe_serving"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_below="@+id/row_recipe_image"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_toStartOf="@id/row_recipe_no_likes"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_people_black_24dp"
                            android:visibility="visible"
                            app:tint="@color/green" />

                        <TextView
                            android:id="@+id/row_recipe_no_serving"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:text="9 Serving"
                            android:textColor="@color/green"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner_green_trans_inside"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/row_recipe_price"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_below="@+id/row_recipe_image"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_toStartOf="@id/row_recipe_no_likes"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_monetization_on_black_24dp"
                            android:visibility="visible"
                            app:tint="@color/green" />

                        <TextView
                            android:id="@+id/row_recipe_no_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:text="9 Price"
                            android:textColor="@color/green"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner_green_trans_inside"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/row_recipe_time"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_below="@+id/row_recipe_image"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_toStartOf="@id/row_recipe_no_likes"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baseline_access_time_black_24dp"
                            android:visibility="visible"
                            app:tint="@color/green" />

                        <TextView
                            android:id="@+id/row_recipe_no_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:text="9 Minutes"
                            android:textColor="@color/green"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/row_recipe_ing_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_holder1"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:maxLines="1"
                android:text="Description"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_recipe_ing_desc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_recipe_ing_desc"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:maxLines="3"
                android:text="Lorem........... ........... ............."
                android:textColor="@color/colorTextSubHeader"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_recipe_ing_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_recipe_ing_desc_txt"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:maxLines="3"
                android:text="Ingredients()"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recipes_ing_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="top"
                android:layout_below="@+id/row_recipe_ing_count"
                android:background="@color/white"
                android:orientation="horizontal"
                android:scrollbars="vertical" />

        </RelativeLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>